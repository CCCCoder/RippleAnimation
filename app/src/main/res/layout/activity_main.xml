<?xml version="1.0" encoding="utf-8"?>
<com.n1njac.neteasymusicdemo.RippleAnimationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ripple_layout"
    android:layout_width="360dp"
    android:layout_height="360dp"
    app:rippleScale="6"
    app:rippleDuration="1500"
    app:rippleType="fill"
    app:rippleRadius="@dimen/rippleRadius"
    app:rippleStokeWidth="@dimen/rippleStrokeWidth"
    app:rippleAmount="5"
    tools:context="com.n1njac.neteasymusicdemo.MainActivity">


    <ImageView
        android:id="@+id/netease_iv"
        android:layout_centerInParent="true"
        android:src="@mipmap/music"
        android:layout_width="100dp"
        android:layout_height="100dp" />



</com.n1njac.neteasymusicdemo.RippleAnimationLayout>
